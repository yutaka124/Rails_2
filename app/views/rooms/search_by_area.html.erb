<div class="container">
  <h1>検索結果: <%= @rooms.count %> 件</h1>

  <div class="row">
    <div class="col-md-12">
      <%= form_with(url: rooms_path, method: :get, local: true, class: 'form-inline mb-3') do |form| %>
        <%= form.text_field :area, placeholder: "エリア名を入力", class: "form-control mr-2" %>
        <%= form.text_field :keyword, placeholder: "キーワード名を入力", class: "form-control mr-2" %>
        <%= form.submit "検索", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>

  <div class="row">
    <% @rooms.each_with_index do |room, index| %>
      <div class="col-md-4">
        <div class="card mb-4">
          <div class="room-image">
            <%= image_tag room.display_image_url, class: "card-img-top" %>
          </div> 
          <div class="card-body">
            <h5 class="card-title"><%= link_to room.name, room_path(room) %></h5>
            <p class="card-text"><%= room.description %></p>
            <p class="card-text"><%= room.price %></p>
            <p class="card-text"><%= room.address %></p>
          </div>
        </div>
      </div>
      <% if (index + 1) % 3 == 0 %>
        </div> <!-- This is for closing the row -->
        <div class="row"> <!-- This is for starting a new row after every 3 cards -->
      <% end %>
    <% end %>
  </div>
</div>
