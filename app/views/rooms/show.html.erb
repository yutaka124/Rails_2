<div class="container">
  <div class="row">
    <div class="col-md-6">
      <%= image_tag @room.display_image_url, class: "img-fluid" %>
    </div>
    <div class="col-md-6">
      <h1><%= @room.name %></h1>

      <p>
        <strong>紹介文:</strong>
        <%= @room.description %>
      </p>

      <p>
        <strong>料金:</strong>
        <%= @room.price %>
      </p>

      <p>
        <strong>住所:</strong>
        <%= @room.address %>
      </p>

      <%= link_to "予約する", new_reservation_path(room_id: @room.id), class: "btn btn-primary" %>

      <%= link_to '戻る', rooms_path, class: "btn btn-secondary" %>
    </div>
  </div>
</div>
